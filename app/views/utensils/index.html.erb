<p id="notice"><%= notice %></p>

<h1>Utensils</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Name</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @utensils.each do |utensil| %>
      <tr>
        <td><%= utensil.recipe %></td>
        <td><%= utensil.name %></td>
        <td><%= utensil.qty %></td>
        <td><%= link_to 'Show', utensil %></td>
        <td><%= link_to 'Edit', edit_utensil_path(utensil) %></td>
        <td><%= link_to 'Destroy', utensil, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

