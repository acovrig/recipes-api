<h2>Search Results</h2>
<% if @results.values.flatten.length == 0 %>
  <p>Sorry, no results found for <em><%= @q %></em>.</p>
<% end %>

<% if @results[:recipes].length > 0 %>
  <h3>Recipes</h3>
  <ul>
    <% @results[:recipes].each do |r| %>
      <li><%= link_to r.name, recipe_path(r.id) %></li>
    <% end %>
  </ul>
<% end %>

