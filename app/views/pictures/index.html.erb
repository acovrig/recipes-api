<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Fname</th>
      <th>Sum</th>
      <th>Width</th>
      <th>Height</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.recipe %></td>
        <td><%= picture.fname %></td>
        <td><%= picture.sum %></td>
        <td><%= picture.width %></td>
        <td><%= picture.height %></td>
        <td><%= picture.size %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
