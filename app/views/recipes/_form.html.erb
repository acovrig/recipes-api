<%= form_for @recipe do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :recipe_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, id: :recipe_author, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :serving_size %>
    <%= form.number_field :serving_size, id: :recipe_serving_size, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :serving_suggestion %>
    <%= form.text_field :serving_suggestion, id: :recipe_serving_suggestion, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.text_field :rating, id: :recipe_rating, class: 'form-control' %>
  </div>

  <h2><a href="#collapseDirections" role="button" data-toggle="collapse">Directions</a></h2>
  <div class="collapse show" id="collapseDirections">
    <ol>
      <%= form.fields_for :directions, @recipe.directions do |dir| %>
        <li>
          <div class="form-inline">
            <%= dir.hidden_field :step %>
            <%= dir.text_field :action, class: 'form-control', style: 'width: calc(100% - 4em); display: inline' %>
            <button class="btn btn-danger btn-sm" type="button" onClick="delStep(<%= @recipe.id %>, this)"><%= fa_icon 'trash' %></button>
          </div>
        </li>
      <% end %>
    </ol>
    <div class="float-right">
      <button type="button" class="btn btn-default" onClick="addStep();">Add Step</button>
    </div>
  </div>

  <h2><a href="#collapseIngredients" role="button" data-toggle="collapse">Ingredients</a></h2>
  <div class="collapse show" id="collapseIngredients">
    <table border=0 class="table table-hover">
      <tr>
        <th>Qty</th>
        <th>Unit</th>
        <th>Item</th>
        <th>Note</th>
        <th><%= fa_icon 'trash' %></td>
      </tr>
      <%= form.fields_for :ingredients, @recipe.ingredients do |dir| %>
        <tr>
          <td><%= dir.number_field :qty, class: 'form-control', style: 'width: 5em;' %></td>
          <td><%= dir.text_field :unit, class: 'form-control', style: 'width: 6em;' %></td>
          <td><%= dir.text_field :item, class: 'form-control', required: true %></td>
          <td><%= dir.text_field :note, class: 'form-control' %></td>
          <td><button class="btn btn-danger btn-sm" type="button" onClick="delStep(<%= @recipe.id %>, this)"><%= fa_icon 'trash' %></button></td>
        </tr>
      <% end %>
    </table>
    <div class="float-right">
      <button type="button" class="btn btn-default" onClick="addIngredient();">Add Ingredient</button>
    </div>
  </div>

  <br>
  <%= form.submit 'Save Recipe', class: 'btn btn-primary' %>
<% end %>
